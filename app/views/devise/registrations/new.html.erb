<div class="flex justify-center items-center h-screen bg-gray-100">
  <div class="w-full max-w-xs">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <h2 class="text-center text-2xl font-bold mb-6">註冊</h2>

      <div class="mb-4">
        <%= f.label :email, '信箱', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, '密碼', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <% if @minimum_password_length %>
          <em class="text-gray-600 text-xs">(密碼長度要超過<%= @minimum_password_length %>位數)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, '確認輸入密碼', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="mb-6">
        <%= f.label :name, '姓名', class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="flex items-center justify-between">
        <%= f.submit "註冊", class: "w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>

  </div>
</div>
